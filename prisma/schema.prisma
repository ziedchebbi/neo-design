generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id String @id @default(cuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
}

model Product {
  id String @id @default(cuid())
  name String
  description String?
  image String
  price Float?
  featured Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories Category[]
}

enum Role {
  OWNER
  MANAGER
  ADMINISTRATOR
}

model Admin {
  id String @id @default(cuid())
  email String @unique
  role Role
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
